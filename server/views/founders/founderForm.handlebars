  <div class="container mt-5">
    <h1>Founder Form</h1>
    <form id="founderForm">
      <!-- Startup Information -->
      <h3>Startup Details</h3>
      <div class="form-group">
        <label for="startupName">Startup Name:</label>
        <input type="text" class="form-control" id="startupName" name="startupName" required>
      </div>

      <div class="form-group">
        <label for="startupIndustry">Industry:</label>
        <select class="form-control" id="startupIndustry" name="startupIndustry" required>
          <option value="Technology">Technology</option>
          <option value="Healthcare">Healthcare</option>
          <option value="Finance">Finance</option>
          <option value="Education">Education</option>
          <option value="Energy">Energy</option>
          <option value="Retail">Retail</option>
          <option value="Agriculture">Agriculture</option>
          <option value="Transportation">Transportation</option>
          <option value="Entertainment">Entertainment</option>
          <option value="Real Estate">Real Estate</option>
        </select>
      </div>

      <div class="form-group">
        <label for="companyDescription">Description:</label>
        <textarea class="form-control" id="companyDescription" name="companyDescription" maxlength="2000"></textarea>
      </div>

      <div class="form-group">
        <label for="establishYear">Year Established:</label>
        <input type="number" class="form-control" id="establishYear" name="establishYear" required>
      </div>

      <div class="form-group">
        <label for="fundingStage">Funding Stage:</label>
        <select class="form-control" id="fundingStage" name="fundingStage" required>
          <option value="Seed">Seed</option>
          <option value="Series A">Series A</option>
          <option value="Series B">Series B</option>
          <option value="IPO">IPO</option>
        </select>
      </div>

      <div class="form-group">
        <label for="amountToRaiseFund">Amount to Raise (USD):</label>
        <input type="number" class="form-control" id="amountToRaiseFund" name="amountToRaiseFund" required>
      </div>

      <!-- Co-Founders -->
      <h3>Co-Founders</h3>
      <div id="coFoundersContainer">
        <div class="form-group">
          <label for="coFounderFirstName">First Name:</label>
          <input type="text" class="form-control" id="coFounderFirstName" name="coFounders[0].firstName">
        </div>
        <div class="form-group">
          <label for="coFounderLastName">Last Name:</label>
          <input type="text" class="form-control" id="coFounderLastName" name="coFounders[0].lastName">
        </div>
        <div class="form-group">
          <label for="coFounderEmail">Email:</label>
          <input type="email" class="form-control" id="coFounderEmail" name="coFounders[0].email">
        </div>
      </div>
      <button type="button" class="btn btn-secondary add-btn" onclick="addCoFounder()">Add Co-Founder</button>

      <!-- Financial Details -->
      <h3>Financial Details</h3>
      <div class="form-group">
        <label for="tam">Total Addressable Market (TAM):</label>
        <input type="number" class="form-control" id="tam" name="financialDetails.totalAddressableMarket">
      </div>

      <div class="form-group">
        <label for="sam">Serviceable Available Market (SAM):</label>
        <input type="number" class="form-control" id="sam" name="financialDetails.serviceableAvailableMarket">
      </div>

      <div class="form-group">
        <label for="companyReserves">Company Reserves:</label>
        <input type="number" class="form-control" id="companyReserves" name="financialDetails.totalCompanyReserves">
      </div>

      <div class="form-group">
        <label for="salaries">Salaries:</label>
        <input type="number" class="form-control" id="salaries" name="financialDetails.companySpent.salaries" required>
      </div>

      <div class="form-group">
        <label for="marketingCost">Marketing Cost:</label>
        <input type="number" class="form-control" id="marketingCost" name="financialDetails.companySpent.marketingCost" required>
      </div>

      <div class="form-group">
        <label for="productRnD">Product R&D:</label>
        <input type="number" class="form-control" id="productRnD" name="financialDetails.companySpent.productRnD" required>
      </div>

      <div class="form-group">
        <label for="miscellaneous">Miscellaneous:</label>
        <input type="number" class="form-control" id="miscellaneous" name="financialDetails.companySpent.miscellaneous" required>
      </div>

      <div id="revenueHistoryContainer">
        <h4>Revenue History</h4>
        <div class="form-group">
          <label for="revenueYear">Year:</label>
          <input type="number" class="form-control" id="revenueYear" name="financialDetails.revenueHistory[0].year" required>
        </div>
        <div class="form-group">
          <label for="revenueAmount">Revenue:</label>
          <input type="number" class="form-control" id="revenueAmount" name="financialDetails.revenueHistory[0].revenue" required>
        </div>
      </div>
      <button type="button" class="btn btn-secondary add-btn" onclick="addRevenueHistory()">Add Revenue History</button>

      <div id="equityDilutionHistoryContainer">
        <h4>Equity Dilution History</h4>
        <div class="form-group">
          <label for="dilutionYear">Year:</label>
          <input type="number" class="form-control" id="dilutionYear" name="financialDetails.equityDilutionHistory[0].year" required>
        </div>
        <div class="form-group">
          <label for="dilutionPercentage">Dilution Percentage:</label>
          <input type="number" class="form-control" id="dilutionPercentage" name="financialDetails.equityDilutionHistory[0].dilutionPercentage" required>
        </div>
        <div class="form-group">
          <label for="investorName">Investor Name:</label>
          <input type="text" class="form-control" id="investorName" name="financialDetails.equityDilutionHistory[0].nameOfInvestor" required>
        </div>
      </div>
      <button type="button" class="btn btn-secondary add-btn" onclick="addEquityDilutionHistory()">Add Equity Dilution History</button>

      <div id="majorCompetitorsContainer">
        <h4>Major Competitors</h4>
        <div class="form-group">
          <label for="competitorName">Competitor Name:</label>
          <input type="text" class="form-control" id="competitorName" name="majorCompetitors[0]" required>
        </div>
      </div>
      <button type="button" class="btn btn-secondary add-btn" onclick="addMajorCompetitor()">Add Major Competitor</button>

      <div id="milestonesContainer">
        <h4>Milestones</h4>
        <div class="form-group">
          <label for="milestoneName">Milestone Name:</label>
          <input type="text" class="form-control" id="milestoneName" name="milestones[0].milestoneName" required>
        </div>
        <div class="form-group">
          <label for="dateAchieved">Date Achieved:</label>
          <input type="date" class="form-control" id="dateAchieved" name="milestones[0].dateAchieved" required>
        </div>
        <div class="form-group">
          <label for="milestoneDescription">Milestone Description:</label>
          <textarea class="form-control" id="milestoneDescription" name="milestones[0].description" required></textarea>
        </div>
      </div>
      <button type="button" class="btn btn-secondary add-btn" onclick="addMilestone()">Add Milestone</button>

      <div class="form-group">
        <label for="valuation">Valuation (USD):</label>
        <input type="number" class="form-control" id="valuation" name="keyMetrics.valuation" required>
      </div>

      <div class="form-group">
        <label for="profitMargin">Profit Margin (%):</label>
        <input type="number" class="form-control" id="profitMargin" name="keyMetrics.profitMargin" required>
      </div>

      <div class="form-group">
        <label for="totalFundingReceived">Total Funding Received (USD):</label>
        <input type="number" class="form-control" id="totalFundingReceived" name="keyMetrics.totalFundingReceived" required>
      </div>

      <div class="form-group">
        <label for="teamSize">Team Size:</label>
        <input type="number" class="form-control" id="teamSize" name="keyMetrics.teamSize" required>
      </div>

      <div class="form-group">
        <label for="monthlyActiveUsers">Monthly Active Users:</label>
        <input type="number" class="form-control" id="monthlyActiveUsers" name="traction.monthlyActiveUsers" required>
      </div>

      <div class="form-group">
        <label for="customerRetentionRate">Customer Retention Rate (%):</label>
        <input type="number" class="form-control" id="customerRetentionRate" name="traction.customerRetentionRate" required>
      </div>

      <div class="form-group">
        <label for="annualRecurringRevenue">Annual Recurring Revenue (USD):</label>
        <input type="number" class="form-control" id="annualRecurringRevenue" name="traction.annualRecurringRevenue" required>
      </div>

      <!-- Social Links -->
      <h3>Social Links</h3>
      <div class="form-group">
        <label for="website">Website:</label>
        <input type="url" class="form-control" id="website" name="socialLinks.website">
      </div>

      <div class="form-group">
        <label for="linkedIn">LinkedIn:</label>
        <input type="url" class="form-control" id="linkedIn" name="socialLinks.linkedIn">
      </div>

      <div class="form-group">
        <label for="twitter">Twitter:</label>
        <input type="url" class="form-control" id="twitter" name="socialLinks.twitter">
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  <script>
    let coFounderIndex = 1;
    function addCoFounder() {
      const container = document.getElementById('coFoundersContainer');
      const coFounderHTML = `
        <div class="form-group">
          <label for="coFounderFirstName${coFounderIndex}">First Name:</label>
          <input type="text" class="form-control" id="coFounderFirstName${coFounderIndex}" name="coFounders[${coFounderIndex}].firstName">
        </div>
        <div class="form-group">
          <label for="coFounderLastName${coFounderIndex}">Last Name:</label>
          <input type="text" class="form-control" id="coFounderLastName${coFounderIndex}" name="coFounders[${coFounderIndex}].lastName">
        </div>
        <div class="form-group">
          <label for="coFounderEmail${coFounderIndex}">Email:</label>
          <input type="email" class="form-control" id="coFounderEmail${coFounderIndex}" name="coFounders[${coFounderIndex}].email">
        </div>
      `;
      container.insertAdjacentHTML('beforeend', coFounderHTML);
      coFounderIndex++;
    }

    let revenueHistoryIndex = 1;
    function addRevenueHistory() {
      const container = document.getElementById('revenueHistoryContainer');
      const revenueHistoryHTML = `
        <div class="form-group">
          <label for="revenueYear${revenueHistoryIndex}">Year:</label>
          <input type="number" class="form-control" id="revenueYear${revenueHistoryIndex}" name="financialDetails.revenueHistory[${revenueHistoryIndex}].year" required>
        </div>
        <div class="form-group">
          <label for="revenueAmount${revenueHistoryIndex}">Revenue:</label>
          <input type="number" class="form-control" id="revenueAmount${revenueHistoryIndex}" name="financialDetails.revenueHistory[${revenueHistoryIndex}].revenue" required>
        </div>
      `;
      container.insertAdjacentHTML('beforeend', revenueHistoryHTML);
      revenueHistoryIndex++;
    }

    let equityDilutionHistoryIndex = 1;
    function addEquityDilutionHistory() {
      const container = document.getElementById('equityDilutionHistoryContainer');
      const equityDilutionHistoryHTML = `
        <div class="form-group">
          <label for="dilutionYear${equityDilutionHistoryIndex}">Year:</label>
          <input type="number" class="form-control" id="dilutionYear${equityDilutionHistoryIndex}" name="financialDetails.equityDilutionHistory[${equityDilutionHistoryIndex}].year" required>
        </div>
        <div class="form-group">
          <label for="dilutionPercentage${equityDilutionHistoryIndex}">Dilution Percentage:</label>
          <input type="number" class="form-control" id="dilutionPercentage${equityDilutionHistoryIndex}" name="financialDetails.equityDilutionHistory[${equityDilutionHistoryIndex}].dilutionPercentage" required>
        </div>
        <div class="form-group">
          <label for="investorName${equityDilutionHistoryIndex}">Investor Name:</label>
          <input type="text" class="form-control" id="investorName${equityDilutionHistoryIndex}" name="financialDetails.equityDilutionHistory[${equityDilutionHistoryIndex}].nameOfInvestor" required>
        </div>
      `;
      container.insertAdjacentHTML('beforeend', equityDilutionHistoryHTML);
      equityDilutionHistoryIndex++;
    }

    let majorCompetitorsIndex = 1;
    function addMajorCompetitor() {
      const container = document.getElementById('majorCompetitorsContainer');
      const majorCompetitorHTML = `
        <div class="form-group">
          <label for="competitorName${majorCompetitorsIndex}">Competitor Name:</label>
          <input type="text" class="form-control" id="competitorName${majorCompetitorsIndex}" name="majorCompetitors[${majorCompetitorsIndex}]" required>
        </div>
      `;
      container.insertAdjacentHTML('beforeend', majorCompetitorHTML);
      majorCompetitorsIndex++;
    }

    let milestonesIndex = 1;
    function addMilestone() {
      const container = document.getElementById('milestonesContainer');
      const milestoneHTML = `
        <div class="form-group">
          <label for="milestoneName${milestonesIndex}">Milestone Name:</label>
          <input type="text" class="form-control" id="milestoneName${milestonesIndex}" name="milestones[${milestonesIndex}].milestoneName" required>
        </div>
        <div class="form-group">
          <label for="dateAchieved${milestonesIndex}">Date Achieved:</label>
          <input type="date" class="form-control" id="dateAchieved${milestonesIndex}" name="milestones[${milestonesIndex}].dateAchieved" required>
        </div>
        <div class="form-group">
          <label for="milestoneDescription${milestonesIndex}">Milestone Description:</label>
          <textarea class="form-control" id="milestoneDescription${milestonesIndex}" name="milestones[${milestonesIndex}].description" required></textarea>
        </div>
      `;
      container.insertAdjacentHTML('beforeend', milestoneHTML);
      milestonesIndex++;
    }
 </script>